rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Imagens públicas de conteúdo
    match /banners/{allPaths=**} {
      // leitura pública (opcional; se quiser restrito, troque para admin)
      allow read: if true;
      // escrita via Signed URL (ignora rules) ou admin via SDK
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Anexos de denúncias — mantenha leitura restrita
    match /reports/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
